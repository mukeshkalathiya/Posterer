<?language javascript?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" pickOnBounds="false"
	prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1"
	xmlns="http://javafx.com/javafx/2.2" fx:controller="com.github.technosf.posterer.controllers.impl.RequestController">
	<children>
		<BorderPane AnchorPane.bottomAnchor="0.0"
			AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
			AnchorPane.topAnchor="0.0">
			<bottom>
				<HBox prefHeight="44.0" prefWidth="600.0">
					<children>
						<TextField fx:id="status" editable="false"
							focusTraversable="false" prefHeight="42.0" prefWidth="9999.0"
							text="Status">
							<HBox.margin>
								<Insets left="2.0" fx:id="x2" />
							</HBox.margin>
						</TextField>
						<ProgressIndicator fx:id="progress" maxHeight="-Infinity"
							maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
							prefHeight="45.0" prefWidth="35.0" progress="-1.0" visible="false"
							HBox.hgrow="NEVER" HBox.margin="$x2" />
					</children>
				</HBox>
			</bottom>
			<center>
				<StackPane fx:id="stack" 
				maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" prefHeight="-1.0" prefWidth="-1.0">
					<children>
						<TableView fx:id="propertiesTable" onMouseClicked="#propertySelected"
						prefHeight="-1.0"
							prefWidth="-1.0">
							<columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
<!-- 							<selectionMode><SelectionMode  fx:constant="SINGLE"/></selectionMode> -->
							<columns>
								<TableColumn fx:id="endpointColumn" text="Endpoint" minWidth="75"
									resizable="true" />
								<TableColumn fx:id="payloadColumn" text="Payload" minWidth="50"
									resizable="true" />
								<TableColumn fx:id="methodColumn" text="Method" minWidth="50"
									resizable="true" />
								<TableColumn fx:id="contentTypeColumn" text="ContentType" minWidth="60"
									resizable="true" />
								<TableColumn fx:id="base64Column" text="Base64" minWidth="50"
									resizable="true" />
								<TableColumn fx:id="httpUserColumn" text="HttpUser" minWidth="55"
									resizable="true" />
								<TableColumn fx:id="httpPasswordColumn" text="HttpPassword" minWidth="55"
									resizable="true" />
							</columns>
						</TableView>
						<TextArea fx:id="request" prefHeight="67.0" prefWidth="205.0"
							promptText="Enter the payload here..." text="" wrapText="true" />
					</children>
					<padding>
						<Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
					</padding>
				</StackPane>
			</center>
			<top>
				<TabPane fx:id="tabs" prefHeight="126.0" prefWidth="600.0"
					tabClosingPolicy="UNAVAILABLE">
					<tabs>
						<Tab fx:id="destination" closable="false" onSelectionChanged="request.toFront()"
							text="Destination">
							<content>
								<AnchorPane id="Content" minHeight="0.0" minWidth="0.0"
									prefHeight="92.0" prefWidth="600.0">
									<children>
										<Label layoutX="14.0" layoutY="17.0" text="URL" />
										<ComboBox fx:id="endpoint" editable="true" layoutY="14.0"
											prefHeight="25.0" prefWidth="464.0" AnchorPane.leftAnchor="50.0"
											AnchorPane.rightAnchor="86.0" />
										<Button fx:id="fire" layoutX="13.0" layoutY="65.0"
											mnemonicParsing="false" onAction="#fire" prefHeight="22.0"
											prefWidth="90.0" text="Fire">
											<font>
												<Font name="System Bold Italic" size="12.0" fx:id="x1" />
											</font>
										</Button>
										<ToggleButton fx:id="proxyToggle1" layoutX="127.0"
											layoutY="65.0" mnemonicParsing="false" onAction="#toggleProxy"
											prefHeight="22.0" prefWidth="70.0" text="Proxy" />
										<ChoiceBox id="action" fx:id="method" layoutX="220.0"
											layoutY="65.0" prefHeight="22.0" value="POST">
											<items>
												<FXCollections fx:factory="observableArrayList">
													<String fx:value="GET" />
													<String fx:value="HEAD" />
													<String fx:value="POST" />
													<String fx:value="PUT" />
													<String fx:value="DELETE" />
													<String fx:value="TRACE" />
													<String fx:value="OPTIONS" />
													<String fx:value="CONNECT" />
													<String fx:value="PATCH" />
												</FXCollections>
											</items>
										</ChoiceBox>
										<ChoiceBox fx:id="mime" layoutX="341.0" layoutY="65.0"
											prefHeight="22.0" value="text/html">
											<items>
												<FXCollections fx:factory="observableArrayList">
													<String fx:value="application/xml" />
													<String fx:value="text/html" />
												</FXCollections>
											</items>
										</ChoiceBox>
										<RadioButton fx:id="encode" layoutX="487.0"
											layoutY="65.0" mnemonicParsing="false" prefHeight="22.0"
											text="Base64 Encode" />
									</children>
								</AnchorPane>
							</content>
						</Tab>
						<Tab closable="false" disable="true" text="Headers">
							<content>
								<AnchorPane id="Content" minHeight="0.0" minWidth="0.0"
									prefHeight="180.0" prefWidth="200.0" />
							</content>
						</Tab>
						<Tab closable="false" onSelectionChanged="request.toFront()"
							text="Timeout">
							<content>
								<AnchorPane id="Content" minHeight="0.0" minWidth="0.0"
									prefHeight="180.0" prefWidth="200.0">
									<children>
										<Label layoutX="14.0" layoutY="14.0" text="Timeout" />
										<TextField fx:id="timeoutText" editable="false"
											focusTraversable="false" layoutX="66.0" layoutY="11.0"
											prefWidth="37.0" text="30" visible="true" />
										<Slider fx:id="timeoutSlider" blockIncrement="5.0"
											layoutX="105.0" layoutY="16.0" majorTickUnit="30.0" max="600.0"
											min="0.0" minorTickCount="5" prefWidth="481.0"
											showTickLabels="true" showTickMarks="false" snapToTicks="true"
											value="30.0" />
										<Button fx:id="fire3" font="$x1" layoutX="13.0"
											layoutY="65.0" mnemonicParsing="false" onAction="#fire"
											prefHeight="22.0" prefWidth="90.0" text="Fire" />
										<ToggleButton fx:id="proxyToggle3" layoutX="127.0"
											layoutY="65.0" mnemonicParsing="false" onAction="#toggleProxy"
											prefHeight="22.0" prefWidth="70.0" text="Proxy" />
									</children>
								</AnchorPane>
							</content>
						</Tab>
						<Tab closable="false" disable="true" text="Authentication">
							<content>
								<AnchorPane id="Content" minHeight="0.0" minWidth="0.0"
									prefHeight="180.0" prefWidth="200.0">
									<children>
										<Label alignment="CENTER_RIGHT" layoutX="12.0" layoutY="14.0"
											prefWidth="50.0" text="User" textAlignment="RIGHT" />
										<Label layoutX="12.0" layoutY="40.0" text="Password" />
										<TextField fx:id="user" layoutX="69.0" layoutY="11.0"
											prefWidth="517.0" />
										<PasswordField fx:id="password" layoutX="69.0"
											layoutY="37.0" prefWidth="517.0" />
										<Button fx:id="fire4" font="$x1" layoutX="13.0"
											layoutY="65.0" mnemonicParsing="false" onAction="#fire"
											prefHeight="22.0" prefWidth="90.0" text="Fire" />
										<ToggleButton fx:id="proxyToggle4" layoutX="127.0"
											layoutY="65.0" mnemonicParsing="false" onAction="#toggleProxy"
											prefHeight="22.0" prefWidth="70.0" text="Proxy" />
									</children>
								</AnchorPane>
							</content>
						</Tab>
						<Tab closable="false" onSelectionChanged="request.toFront()"
							text="Proxy">
							<content>
								<AnchorPane id="Content" minHeight="0.0" minWidth="0.0"
									prefHeight="180.0" prefWidth="200.0">
									<children>
										<Button fx:id="fire2" font="$x1" layoutX="13.0"
											layoutY="65.0" mnemonicParsing="false" onAction="#fire"
											prefHeight="22.0" prefWidth="90.0" text="Fire" />
										<ToggleButton fx:id="proxyToggle2" layoutX="127.0"
											layoutY="65.0" mnemonicParsing="false" onAction="#toggleProxy"
											prefHeight="22.0" prefWidth="70.0" text="Proxy" />
										<TextField id="" fx:id="proxyhost" editable="true"
											layoutX="75.0" layoutY="14.0" prefWidth="520.0" />
										<TextField id="" fx:id="proxyport" editable="true"
											layoutX="75.0" layoutY="37.0" prefWidth="50.0" />
										<Label fx:id="proxyhostlabel" layoutX="15.0" layoutY="15.0"
											text="Proxy Host">
											<textFill>
												<Color blue="0.500" green="0.500" red="0.500" fx:id="x3" />
											</textFill>
										</Label>
										<Label fx:id="proxyportlabel" layoutX="15.0" layoutY="38.0"
											text="Proxy Port" textFill="$x3" />
										<Label fx:id="proxyuserlabel" layoutX="201.0" layoutY="43.0"
											text="Username" textFill="$x3" />
										<Label fx:id="proxypasswordlabel" layoutX="401.0"
											layoutY="43.0" text="Password" textFill="GREY" />
										<TextField id="" fx:id="proxyuser" layoutX="259.0"
											layoutY="40.0" prefWidth="130.0" />
										<TextField id="" fx:id="proxypassword" layoutX="454.0"
											layoutY="40.0" prefWidth="141.0" />
									</children>
								</AnchorPane>
							</content>
						</Tab>
						<Tab closable="false" disable="true" text="Parameters">
							<content>
								<AnchorPane id="Content" minHeight="0.0" minWidth="0.0"
									prefHeight="180.0" prefWidth="200.0" />
							</content>
						</Tab>
						<Tab fx:id="store" closable="true" disable="false"
							onSelectionChanged="propertiesTable.toFront()" text="Store">
							<content>
								<AnchorPane id="Content" minHeight="0.0" minWidth="0.0"
									prefHeight="180.0" prefWidth="200.0">
									<children>
										<Label layoutX="14.0" layoutY="14.0"
											text="Request configurations store" textFill="$x3" />
										<TextField id="home" fx:id="homedir" disable="true"
											editable="false" focusTraversable="false" layoutX="175.0"
											layoutY="12.0" prefHeight="22.0" prefWidth="420.0" />
										<Button fx:id="save" layoutX="14.0" layoutY="48.0"
											mnemonicParsing="false" onAction="#saveCurrentConfig"
											text="Save Current Request Configuration" />
									</children>
								</AnchorPane>
							</content>
						</Tab>
					</tabs>
				</TabPane>
			</top>
		</BorderPane>
	</children>
</AnchorPane>
